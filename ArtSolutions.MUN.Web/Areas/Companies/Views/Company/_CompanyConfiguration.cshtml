@model ArtSolutions.MUN.Web.Areas.Companies.Models.CompanyModel
@using GlobalResource = ArtSolutions.MUN.Web.Resources.Global;
@using LocalResource = ArtSolutions.MUN.Web.Resources.Company;

<fieldset>
    <h2>@LocalResource.CompanyConfigurationTitle</h2>
    <div class="row m-t-lg form-horizontal">
        <div class="col-lg-12">
            <div class="form-group">
                <label class="col-lg-4 text-right control-label">@LocalResource.CompanyCode <span class="text-danger">*</span></label>
                <div class="col-lg-2">
                    @Html.TextBoxFor(x => x.Code, new { @class = "form-control required", @id = "txtCode", @maxLength = 5, autofocus = "autofocus" })
                </div>
                <div class="col-lg-6 m-t-xs">
                    @Html.ValidationMessageFor(x => x.Code)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-4 control-label">@LocalResource.NoOfDecimalPointsAllowed <span class="text-danger">*</span></label>
                <div class="col-lg-2">
                    @Html.TextBoxFor(x => x.CompanyParameter.Precision, new { @class = "form-control text-right inputdecimal required", id = "txtPrecision", maxlength = 5 })
                </div>
                <div class="col-lg-6 m-t-xs">
                    @Html.ValidationMessageFor(m => m.CompanyParameter.Precision)
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-4 text-right">@LocalResource.UseLeapYear </label>
                <div class="col-lg-2">
                    @Html.CheckBoxFor(x => x.CompanyParameter.UseLeapYear, new { id = "chkUseLeapYear" })
                </div>
                <div class="col-lg-6 m-t-xs">
                </div>
            </div>
        </div>
    </div>
</fieldset>
@model ArtSolutions.MUN.Web.Areas.Collections.Models.PropertyTransferModel

@using GlobalResource = ArtSolutions.MUN.Web.Resources.Global

<form id="frmComments">
    <div class="modal inmodal" id="divCommentModel" role="dialog" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-lg">
            <div class="modal-content animated fadeIn">
                <div class="modal-body no-padding">
                    <div class="ibox">
                        <div class="ibox-title">
                            <h5>@GlobalResource.Comments</h5>
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">@GlobalResource.Close</span></button>
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <label class="control-label">@GlobalResource.AssignTo <span class="text-danger">*</span></label>
                                            @Html.DropDownList("ddlCommentAssignTo", Model.SecurityGroupUsersList, new { @class = "form-control select2dropdown required", @id = "ddlCommentAssignTo", tabindex = 1 })
                                            @Html.ValidationMessage("ddlCommentAssignTo", GlobalResource.RequiredValidationMsg)                                            
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <label class="control-label">@GlobalResource.Reason <span class="text-danger">*</span></label>
                                            @Html.DropDownList("ddlCommentReasons", Model.WorkflowReasonList, new { @class = "form-control select2dropdown required", @id = "ddlCommentReasons", tabindex = 2 })
                                            @Html.ValidationMessage("ddlCommentReasons", GlobalResource.RequiredValidationMsg)
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <label class="control-label">@GlobalResource.Comment <span class="text-danger">*</span></label>
                                            @Html.TextArea("txtComments", new { @class = "form-control textarea-vertical-resize required", @rows = 4, @cols = 80, tabindex = 3, @maxlength = "500", })
                                            @Html.ValidationMessage("txtComments", GlobalResource.RequiredValidationMsg)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnAddComments" class="btn btn-primary as-btn-text" tabindex=4>@GlobalResource.Add</button>
                    <button type="button" id="btnCancelComments" class="btn btn-default as-btn-text" data-dismiss="modal" tabindex=5>@GlobalResource.Cancel</button>
                </div>
            </div>
        </div>
    </div>
    </form>


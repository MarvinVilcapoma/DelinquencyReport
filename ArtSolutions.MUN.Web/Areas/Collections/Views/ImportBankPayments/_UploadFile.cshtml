@model ArtSolutions.MUN.Web.Areas.Collections.Models.ImportBankPaymentsFieldModel
@using LocalResource = ArtSolutions.MUN.Web.Resources.ImportAccount;
@using GlobalResource = ArtSolutions.MUN.Web.Resources.Global;


<h2>@LocalResource.SelectFileToImport</h2>
<div class="row">
    @Html.HiddenFor(x => x.type)

    <div class="col-lg-8 m-t-sm">
        <div class="form-group">
            <label class="col-lg-2 control-label"> @GlobalResource.Date <span class="text-danger">*</span> </label>
            <div class="col-lg-4">
                @Html.TextBoxFor(x => x.Date, new { @class = "form-control importDate required", tabindex = 3 })
                @Html.ValidationMessageFor(x => x.Date, GlobalResource.RequiredValidationMsg)
            </div>
        </div>
    </div>

    <div class="col-lg-8 m-t-sm">
        <div class="form-group">
            <label class="col-lg-2 control-label"> @GlobalResource.Bank <span class="text-danger">*</span> </label>
            <div class="col-lg-4">
                @Html.DropDownListFor(x => x.PaymentOptionID, Model.PaymentOptions, @GlobalResource.DropDownSelectMessage, new { @class = "form-control select2dropdown required", tabindex = 4 })
                @Html.ValidationMessageFor(x => x.PaymentOptionID, GlobalResource.RequiredValidationMsg)
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="form-group">
            <br /><label>@LocalResource.SelectFile <span class="text-danger">&nbsp;*</span></label>
            <div class="dropzone" id="dropzoneForm">
                <div class="fallback">
                    @Html.TextBoxFor(model => Model.UploadFile, new { type = "file" })
                    @Html.ValidationMessageFor(m => m.UploadFile, "", new { @class = "text-danger" })
                </div>
            </div>
            <span>@GlobalResource.TextFileFormat</span>
        </div>
    </div>
</div>
@model ArtSolutions.MUN.Web.Areas.Workflows.ViewModel.WorkflowViewModel
@using LocalResource = ArtSolutions.MUN.Web.Resources.Workflow
@using GLobalResource = ArtSolutions.MUN.Web.Resources.Global
@{
    ViewBag.Title = LocalResource.ListTitle;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-12">
        <h2>@GLobalResource.Workflow</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home", new {area = "" })">@GLobalResource.Home</a>
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>@ViewBag.Title  </h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action("Add","Workflow",new { area="Workflows" })" tabindex="4" class="btn btn-primary btn-xs">
                            @LocalResource.AddTitle
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row m-b-lg m-t-sm">
                        <div class="col-sm-2 col-md-2 col-lg-1">
                            <button type="button" id="btnrefresh" tabindex="3" class="btn btn-white btn-sm"><i class="fa fa-refresh"></i> @GLobalResource.Refresh</button>
                        </div>
                        <div class="col-sm-5 col-md-5 col-lg-4">
                            @Html.DropDownListFor(a => a.DocumentTypeID, Model.DocumentTypeList == null ? Enumerable.Empty<SelectListItem>() : Model.DocumentTypeList.Select(a => new SelectListItem { Value = Convert.ToString(a.ID), Text = a.Name }).ToList(), new { @class = "input-sm form-control select2dropdown" })
                        </div>
                        <div class="col-sm-5 col-md-5 col-lg-7">
                            <div class="input-group">
                                <input type="text" placeholder="Search" class="input-sm form-control readdata" id="txtSearch" tabindex="1">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary" id="btnSearch" tabindex="2"> @GLobalResource.Go</button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive project-list">
                        <table class="table table-stripped " id="ListTable"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/sweetAlertStyles")
    @Styles.Render("~/plugins/select2Styles")
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/sweetAlert")
    @Scripts.Render("~/plugins/select2")
    <script>
        var nodatamsg = "@GLobalResource.NoDataMessage",
            first = "@GLobalResource.First",
            last = "@GLobalResource.Last",
            next = "@GLobalResource.Next",
            previous = "@GLobalResource.Previous",
            documentType = "@GLobalResource.DocumentType",
            name = "@GLobalResource.Name",
            description = "@GLobalResource.Description",
            action = "@GLobalResource.Action",
            view = "@GLobalResource.View",
            edit = "@GLobalResource.Edit",
            isBack = '@ViewBag.IsBack',
            active = "@GLobalResource.Active",
            inActive = "@GLobalResource.InActiveConfirm",
            inActivebtn = "@GLobalResource.InActivebtn",
            activeConfirm = "@GLobalResource.ActiveConfirm",
            sureMessage = "@GLobalResource.SureMessage",
            cancel = "@GLobalResource.Cancel",
            activeMessage = "@GLobalResource.ActiveMessage",
            deActiveMessage = "@GLobalResource.DeActiveMessage";

    </script>
    <script src="~/Scripts/app/workflowlist.js"></script>
}

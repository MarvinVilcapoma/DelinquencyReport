
@using LocalResource = ArtSolutions.MUN.Web.Resources.Workflow
@using GLobalResource = ArtSolutions.MUN.Web.Resources.Global

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="form-group">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 text-right">
                <label>
                    @GLobalResource.Name
                </label>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                <input type="text" name="txtWorkflowStatus" id="txtWorkflowStatus" class="form-control" />
            </div>
            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-12 text-right">
                <button class="btn btn-sm btn-primary" onclick="OpenStatusAddPopup();" type="button">
                    @GLobalResource.Add
                </button>
            </div>
        </div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="table-responsive">
            <table class="table table-bordered white-bg" id="tblStatus">
                <thead>
                    <tr>
                        <th class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                            @GLobalResource.Name
                        </th>
                        <th class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                            @LocalResource.Activity
                        </th>
                        <th class="col-lg-7 col-md-7 col-sm-7 col-xs-12">
                            @GLobalResource.Reason
                        </th>
                        <th class="col-lg-1 col-md-1 col-sm-1 col-xs-12 text-right">
                            @GLobalResource.Action
                        </th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>


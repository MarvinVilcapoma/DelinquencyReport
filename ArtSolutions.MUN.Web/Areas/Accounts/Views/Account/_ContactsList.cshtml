@model List<ArtSolutions.MUN.Web.Areas.Accounts.Models.ContactsModel>
@using LocalResource = ArtSolutions.MUN.Web.Resources.Account
@using GlobalResource = ArtSolutions.MUN.Web.Resources.Global

<table class="table table-hover" id="tblContact">
    <thead>
        <tr>
            <th class="col-lg-6">@GlobalResource.Name</th>
            <th class="col-lg-3">@GlobalResource.Type</th>
            <th class="col-lg-3 project-actions">@GlobalResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="3" class="text-center">
                    @GlobalResource.NoDataMessage
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="col-lg-6 table-description-field">
                        @item.FirstName @item.MiddleName @item.LastName
                    </td>
                    <td class="col-lg-3">
                        @item.PositionType
                    </td>
                    <td class="col-lg-3 text-right">
                        @if (item.AccountID > 0)
                        {
                            <a id="btnViewContact" onclick="EditContact(@item.ID,'view')" href="javascript:void(0);" class="btn btn-white btn-sm"><i class="fa fa-folder"></i></a>
                            <a id="btnEditContact" onclick="EditContact(@item.ID,'edit')" href="javascript:void(0);" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i></a>
                        }
                        <a id="btnDeleteContact" class='btn btn-danger btn-circle' onclick="DeleteContact(this,@item.SequenceID,@item.ID)"><i class='fa fa-times'></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
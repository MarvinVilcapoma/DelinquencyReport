@model List<ArtSolutions.MUN.Web.Areas.Accounts.Models.AddressModel>
@using LocalResource = ArtSolutions.MUN.Web.Resources.Account
@using GlobalResource = ArtSolutions.MUN.Web.Resources.Global

<table class="table table-hover" id="tblAddress">
    <thead>
        <tr>
            <th class="col-lg-6">@LocalResource.Address</th>
            <th class="col-lg-3">@GlobalResource.Type</th>
            <th class="col-lg-3 project-actions">@GlobalResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="3" class="text-center">
                    @GlobalResource.NoDataMessage
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="col-lg-6 table-description-field">
                        @item.AddressLine1
                    </td>
                    <td class="col-lg-3">
                        @item.AddressType
                    </td>
                    <td class="col-lg-3 text-right">
                        @if (item.AccountID > 0)
                        {
                            <a id="btnViewAddress" onclick="EditAddress('@item.ID','@item.CountryStateID','@item.CityID','@item.TownID','view')" href="javascript:void(0);" class="btn btn-white btn-sm"><i class="fa fa-folder"></i></a>
                            <a id="btnEditAddress" onclick="EditAddress('@item.ID','@item.CountryStateID','@item.CityID','@item.TownID','edit')" href="javascript:void(0);" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i></a>
                        }
                        <a id="btnDeleteAddress" class='btn btn-danger btn-circle' onclick="DeleteAddress(this,@item.SequenceID,@item.ID)"><i class='fa fa-times'></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
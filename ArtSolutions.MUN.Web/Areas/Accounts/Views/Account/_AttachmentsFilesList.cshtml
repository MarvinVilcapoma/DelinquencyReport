@model List<ArtSolutions.MUN.Web.Areas.Accounts.Models.AttachmentModel>
@using LocalResource = ArtSolutions.MUN.Web.Resources.Account
@using GlobalResource = ArtSolutions.MUN.Web.Resources.Global

<table class="table table-hover" id="tblFile">
    <thead>
        <tr>
            <th class="col-lg-7">@GlobalResource.Name</th>
            <th class="col-lg-3">@GlobalResource.Type</th>
            <th class="col-lg-2 project-actions">@GlobalResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="3" class="text-center">
                    @GlobalResource.NoDataMessage
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="col-lg-7 table-description-field">
                        @Html.ActionLink(item.Name, "DownloadFile", "File", new { id = item.FileID, area = "" }, null)
                    </td>
                    <td class="col-lg-3">
                        @item.FileType
                    </td>
                    <td class="col-lg-2 text-right">
                        <a id="btnDeleteAttachement" class='btn btn-danger btn-circle' onclick="DeleteAttachment(this,'@item.FileID')"><i class='fa fa-times'></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
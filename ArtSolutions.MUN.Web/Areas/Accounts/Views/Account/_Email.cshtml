@model ArtSolutions.MUN.Web.Areas.Accounts.Models.EmailModel
@using LocalResource = ArtSolutions.MUN.Web.Resources.Account
@using GlobalResource = ArtSolutions.MUN.Web.Resources.Global

<form id="frmEmail">
    <div class="modal-body no-padding">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5 id="emailtitle">@LocalResource.NewEmail</h5>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">@GlobalResource.Close</span></button>
            </div>
            @Html.HiddenFor(x => x.ID, new { id = "emailId" })
            <div class="ibox-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="control-label">@LocalResource.EmailType <span class="text-danger">*</span></label>
                            @Html.DropDownListFor(x => x.EmailTypeID, Model.EmailTypeList, GlobalResource.DropDownSelectMessage, new { @class = "form-control required select2dropdown", @id = "ddlEmailType" })
                            @Html.ValidationMessageFor(x => x.EmailTypeID)
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="control-label">@LocalResource.Email <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control required", id = "txtEmail", maxlength = 50 })
                            @Html.ValidationMessageFor(x => x.Email)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnAddEmail" type="button" class="btn btn-primary" data-form-type="1">@GlobalResource.Add</button>
        <button type="button" class="btn btn-white" data-dismiss="modal">@GlobalResource.Cancel</button>
    </div>
</form>

<script type="text/javascript">
    var viewTitle ='@Html.Raw(LocalResource.ViewEmail)';
    var editTitle ='@Html.Raw(LocalResource.EditEmail)';

    $(document).ready(function () {
        $.validator.unobtrusive.parse('#frmEmail');
    });
</script>
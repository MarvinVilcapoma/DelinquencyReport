@model List<ArtSolutions.MUN.Web.Areas.Accounts.Models.EmailModel>
@using LocalResource = ArtSolutions.MUN.Web.Resources.Account
@using GlobalResource = ArtSolutions.MUN.Web.Resources.Global

<table class="table table-hover" id="tblAddress">
    <thead>
        <tr>
            <th class="col-lg-5">@LocalResource.Email</th>
            <th class="col-lg-2">@GlobalResource.Type</th>
            <th class="col-lg-2">@GlobalResource.IsPrimary</th>
            <th class="col-lg-3 project-actions">@GlobalResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="4" class="text-center">
                    @GlobalResource.NoDataMessage
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="col-lg-5 table-description-field">
                        @item.Email
                    </td>
                    <td class="col-lg-2">
                        @item.Type
                    </td>
                    <td class="col-lg-2">
                        @if (@item.IsPrimary)
                        {
                            @GlobalResource.Yes
                        }
                        else
                        {
                            @GlobalResource.No
                        }
                    </td>
                    <td class="col-lg-3 text-right">
                        @if (item.AccountID > 0)
                        {
                            <a id="btnViewEmail" onclick="EditEmail(@item.ID,'view')" href="javascript:void(0);" class="btn btn-white btn-sm"><i class="fa fa-folder"></i></a>
                            <a id="btnEditEmail" onclick="EditEmail(@item.ID,'edit')" href="javascript:void(0);" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i></a>
                        }
                        <a id="btnDeleteEmail" class='btn btn-danger btn-circle' onclick="DeleteEmail(this,@item.SequenceID)"><i class='fa fa-times'></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
@model IEnumerable<ArtSolutions.MUN.Web.Areas.Accounts.Models.AccountServiceNoteModel>
@using LocalResource = ArtSolutions.MUN.Web.Resources.AccountService
@using GlobalResource = ArtSolutions.MUN.Web.Resources.Global
@using ArtSolutions.MUN.Web.Helpers

<div class="full-height-scroll" id="notelist">
    <div class="ibox-content">
        <div class="table-responsive m-t">
            <table id="tblNoteList" class="table notelist-table footable" data-page="false" data-sort="false">
                <thead>
                    <tr>
                        <th class="text-left col-lg-2">@GlobalResource.Date</th>
                        <th class="text-left col-lg-7">@GlobalResource.Notes </th>
                        <th class="text-left col-lg-3">@LocalResource.NotesBy </th>
                        <th class="text-left col-lg-2">@GlobalResource.Action </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td class="col-lg-12" colspan="4">
                                <center>@GlobalResource.NoDataMessage</center>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                        <tr>
                            <td class="col-lg-2">
                                @Html.Raw(String.Format(new System.Globalization.CultureInfo(UserSession.Current.Language), "{0:MMMM d, yyyy}", item.CreatedDate))
                            </td>
                            <td class="col-lg-5 text-left" style="word-break: break-word;">
                                @Html.Raw(item.Note)
                            </td>
                            <td class="col-lg-3 text-left">
                                @item.CreatedBy
                            </td>
                                <td class="col-lg-2 text-right">
                                    <a href='javascript:void(0)' id="NoteDelete" data-id="@item.ID" data-isaccountservicenote="@item.IsAccountServiceNote" class="btn btn-white btn-sm m-l-xs btnNoteDelete"><i class="fa fa-trash"></i> @GlobalResource.Delete </a>
                                </td>
                        </tr>
                        }
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="12">
                            <ul class="pagination pull-right"></ul>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

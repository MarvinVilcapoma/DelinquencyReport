@model ArtSolutions.MUN.Web.Areas.Accounts.Models.AccountServiceModel
@using LocalResource = ArtSolutions.MUN.Web.Resources.AccountService
@using PaymentResource = ArtSolutions.MUN.Web.Resources.COLPayment
@using GlobalResource = ArtSolutions.MUN.Web.Resources.Global

@using (Ajax.BeginForm("NewPayment", "AccountService", new AjaxOptions { HttpMethod = "POST" }, new { role = "form", id = "frmMakePayment", @class = "form-horizontal", data_ajax_mode = "replace-with" }))
{
    <div class="modal-body no-padding">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5> @LocalResource.MakePayment </h5>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">@GlobalResource.Close</span></button>
            </div>
            <div class="ibox-content">
                <div class="row form-group">
                    <label class="col-lg-6 control-label">@PaymentResource.AmountDue </label>
                    <div class="col-lg-6 text-right">
                        <label class="control-label " id="spndueAmount"></label>
                    </div>
                </div>
                <div class="row form-group">
                    <label class="col-lg-6 control-label">@GlobalResource.Amount <span class="text-danger">*</span></label>
                    <div class="col-lg-6">
                        @Html.TextBoxFor(x => x.AmountToPay, new { @class = "required form-control text-right inputdecimal", @tabindex = "1", @id = "txtPaidAmount" })
                        @Html.ValidationMessageFor(x => x.AmountToPay)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" onclick="SaveInvoice(@Model.ID, @Model.AccountID)">@LocalResource.MakePayment</button>
        <button id="btnCancel" type="button" class="btn btn-white closemodal" data-dismiss="modal">@GlobalResource.Cancel</button>
    </div>
}
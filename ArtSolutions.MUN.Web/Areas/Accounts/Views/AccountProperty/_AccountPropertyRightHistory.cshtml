@model List<ArtSolutions.MUN.Web.Areas.Accounts.Models.MUNAccountPropertyRightHistoryModel>
@using LocalResource = ArtSolutions.MUN.Web.Resources.AccountProperty
@using GlobalResource = ArtSolutions.MUN.Web.Resources.Global

<div class="row">
    <div class="col-lg-12">
        <div class="full-height-scroll">
            <div class="table-responsive m-t">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="col-lg-3">@LocalResource.OldPropertyNumber</th>
                            <th class="col-lg-3">@LocalResource.NewPropertyNumber</th>
                            <th class="col-lg-3">@GlobalResource.CreatedUser</th>
                            <th class="col-lg-3">@GlobalResource.Created</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="col-lg-3">
                                    @item.OldFincaID
                                </td>
                                <td class="col-lg-3">
                                    @item.NewFincaID
                                </td>
                                <td class='col-lg-3'>
                                    @item.CreatedBy
                                </td>
                                <td class='col-lg-3'>
                                    @string.Format("{0} {1}", item.CreatedDate.ToString("d"), @item.CreatedDate.ToString("t"))
                                </td>
                            </tr>
                        }
                        @if (@Model == null || @Model.Count <= 0)
                        {
                            <tr>
                                <td colspan="4" class="col-lg-12">
                                    <center> @GlobalResource.NoDataMessage </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
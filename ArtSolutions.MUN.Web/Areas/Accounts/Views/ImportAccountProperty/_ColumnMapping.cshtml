                <label>@AccountPropertyResource.CondoType</label>
                @Html.DropDownListFor(model => Model.Duplicate, Model.HeaderColumnList, LocalResource.SelectColumn, new { @class = "form-control select2dropdown" })
                @Html.ValidationMessageFor(m => m.Duplicate, "", new { @class = "text-danger" })

                <label>@LocalResource.GroupCode <span class="text-danger">&nbsp;*</span></label>
                @Html.DropDownListFor(model => Model.GroupCode, Model.HeaderColumnList, LocalResource.SelectColumn, new { @class = "form-control select2dropdown required" })
                @Html.ValidationMessageFor(m => m.GroupCode, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>@AccountPropertyResource.PropertyNumber <span class="text-danger">&nbsp;*</span></label>

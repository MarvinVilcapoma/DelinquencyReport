@model ArtSolutions.MUN.Web.Areas.Accounts.Models.ImportMeasuredWaterFilingFieldModel
@using LocalResource = ArtSolutions.MUN.Web.Resources.ImportAccount;
@using GlobalResource = ArtSolutions.MUN.Web.Resources.Global;

<h2>@LocalResource.SelectFileToImport</h2>

<div class="row m-t-lg">
    <div class="col-lg-8">
        <div class="form-group">
            <label class="col-lg-2 control-label"> @GlobalResource.Period <span class="text-danger">*</span> </label>
            <div class="col-lg-4">
                @Html.TextBoxFor(x => x.PeriodDate, new { @class = "form-control periodDate required", tabindex = 3 })
                @Html.ValidationMessageFor(x => x.PeriodDate, GlobalResource.RequiredValidationMsg)
            </div>
        </div>
    </div>
</div>

<div class="row m-t-lg">
    @Html.HiddenFor(x => x.type)
    <div class="col-lg-8">
        <div class="form-group">
            <label>
                @LocalResource.DownloadFileOption
                <a href='@Url.Content("~/SampleImportFile/ImportMeasuredWaterFiling.xlsx")'
                   data-toggle="tooltip" data-placement="bottom"
                   title="@LocalResource.DownloadExcelTemplate">
                    @LocalResource.Sample
                </a>
                @LocalResource.CompareSample
            </label>
            <br /><label>@LocalResource.SelectFile<span class="text-danger">&nbsp;*</span></label>
            <div class="dropzone" id="dropzoneForm">
                <div class="fallback">
                    @Html.TextBoxFor(model => Model.UploadFile, new { type = "file" })
                    @Html.ValidationMessageFor(m => m.UploadFile, "", new { @class = "text-danger" })
                </div>
            </div>
            <span>@GlobalResource.FileFormatForImportMeasuredWaterFiling</span>
        </div>
    </div>
</div>

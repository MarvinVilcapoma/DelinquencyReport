@model ArtSolutions.MUN.Web.Areas.Reports.Models.AccountPropertyRemovedModel
@using ArtSolutions.MUN.Web.Helpers
@using ReportResource = ArtSolutions.MUN.Web.Resources.Report
@using GlobalResource = ArtSolutions.MUN.Web.Resources.Global
@{
    ViewBag.Title = ReportResource.ReportOfAccountPropertyRemoved;   
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title> @ViewBag.Title </title>
    <style>
        @Html.Raw(File.ReadAllText(Server.MapPath("~/Content/printStyle.css")))
        @@page {
            size: landscape;
        }
    </style>
</head>
<body class="white-bg">
    <div id="divPrint" class="wrapper wrapper-content p-xl">
        @{
            Html.RenderPartial("~/Areas/Reports/Views/Shared/_CommonHeader.cshtml", Model.ReportCompanyModel);
        }
        <table id="AccountPropertyRemovedTable" class="table table-report display nowrap">
            <thead>
                <tr>
                    <th width="10%" class="table-border-center-th">
                        @ReportResource.RightNumber
                    </th>
                    <th width="30%"colspan="2" class="table-border-center-th">
                        @GlobalResource.AccountName
                    </th>                   
                    <th width="10%" class="table-border-center-th">
                        @ReportResource.RemovedDate
                    </th>                    
                    <th width="30%" colspan="2" class="table-border-center-th">
                        @GlobalResource.DeletedBy
                    </th>
                </tr>
            </thead>
            <tbody id="tblDetailRow">
                @if (Model.AccountPropertyRemovedList != null && Model.AccountPropertyRemovedList.Count() > 0)
                {
                    foreach (var item in Model.AccountPropertyRemovedList)
                    {

                <tr>
                    <td class="table-border-left-td">
                        @item.RigthNumber

                    </td>
                    <td class="table-border-center-td" colspan="2">
                        @item.AccountName
                    </td>                    
                    <td class="table-border-center-td">@item.ModifiedDate.ToString("d")</td>                   
                    <td class="table-border-center-td" colspan="2">@item.DeletedByAccountName</td>
                </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</body>
</html>
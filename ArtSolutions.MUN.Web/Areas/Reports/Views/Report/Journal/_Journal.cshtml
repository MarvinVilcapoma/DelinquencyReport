@model List<ArtSolutions.MUN.Web.Areas.Reports.Models.JournalListModel>
@using LocalResource = ArtSolutions.MUN.Web.Resources.Report
@using GlobalResource = ArtSolutions.MUN.Web.Resources.Global
@{
    ViewBag.Title = LocalResource.JournalTitle;
}


<div class="table-responsive m-t">
    <table class="table table-report" id="tblJournal">
        <thead>
            <tr class="sub-header">
                <th style="width:25%">
                    @GlobalResource.Type
                </th>
                <th style="width:10%">
                    @GlobalResource.Date
                </th>
                <th style="width:20%">
                    @GlobalResource.Name
                </th>
                <th style="width:25%">
                    @GlobalResource.Memo
                </th>
                <th style="width:10%">
                    @GlobalResource.Status
                </th>
                <th style="width:10%" class="text-right">
                    @GlobalResource.Amount
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Date.ToShortDateString()
                </td>
                <td>
                    @item.AccountName
                </td>
                <td>
                    @item.Memo
                </td>
                <td>
                    @item.Status
                </td>
                <td class="text-right">
                    @item.Amount.ToString("C")
                </td>
            </tr>

                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center" width="100%">
                        @GlobalResource.NoDataMessage
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
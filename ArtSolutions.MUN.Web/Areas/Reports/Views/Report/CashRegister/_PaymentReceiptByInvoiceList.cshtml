@model IEnumerable<ArtSolutions.MUN.Web.Areas.Collections.Models.PaymentModel>
@using LocalResource = ArtSolutions.MUN.Web.Resources.Report
@using GlobalResource = ArtSolutions.MUN.Web.Resources.Global

<table class="table discount-table">
    <thead>
        <tr>
            <th class="col-lg-1"> &nbsp;</th>
            <th class="col-lg-2 text-left">@GlobalResource.ItemType </th>
            <th class="col-lg-3 text-left">@GlobalResource.CollectionItem </th>
            <th class="col-lg-2 text-left">@GlobalResource.ReceiptNumber </th>
            <th class="col-lg-2 text-left" align="left">@GlobalResource.ReceiptDate </th>
            <th class="col-lg-2 text-right" align="right">@GlobalResource.NetPayment</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td class="col-lg-12" colspan="6">
                    <center>@GlobalResource.NoDataMessage</center>
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="col-lg-1"> &nbsp;</td>
                    <td class="col-lg-2 text-left" style="text-align:left;">
                        @item.ServiceTypeName
                    </td>
                    <td class="col-lg-3 text-left" style="text-align:left;">
                        @item.CollectionType
                    </td>
                    <td class="col-lg-2 text-left" style="text-align:left;">
                        @item.Number
                    </td>
                    <td class="col-lg-2 text-left" style="text-align:left;">
                        @item.FormattedDate
                    </td>
                    <td class="col-lg-2 text-right" style="text-align:right;">
                        @item.FormattedNetPayment
                    </td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        @if (Model.Count() > 0)
        {
            <tr>
                <td colspan="5" class="text-right" align="right">
                    <strong>@GlobalResource.Total.ToUpper() : </strong>
                </td>
                <td class="text-right border-bottom font-bold" align="right">
                    @Model.Sum(e => e.NetPayment).ToString("C")
                </td>
            </tr>
        }
    </tfoot>
</table>
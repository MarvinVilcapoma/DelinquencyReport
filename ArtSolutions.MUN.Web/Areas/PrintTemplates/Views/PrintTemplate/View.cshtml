@model ArtSolutions.MUN.Web.Areas.PrintTemplates.Models.PrintTemplate
@using GlobalResource = ArtSolutions.MUN.Web.Resources.Global;
@using LocalResource = ArtSolutions.MUN.Web.Resources.PrintTemplates;
@using CaseResource = ArtSolutions.MUN.Web.Resources.Case;
@{
    ViewBag.Title = LocalResource.ViewPrintTemplate;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <h2>@GlobalResource.PrintTemplate</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home", new { area = "" })">@GlobalResource.Home</a>
            </li>
            <li>
                <a href="@Url.Action("List", "PrintTemplate", new { area = "PrintTemplates" })">@LocalResource.ListTitle</a>
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>
<div class="row wrapper wrapper-content animated fadeInRight">
    <form method="post" id="form">
        <div class="ibox float-e-margins">
            <div class="ibox-title ibox-title-with-button">
                <h5>@LocalResource.ViewPrintTemplate</h5>
                <div class="ibox-tools">
                    <a href="@Url.Action("List", "PrintTemplate", new { area = "PrintTemplates" })" class="btn btn-white" style="color:inherit" tabindex="12">@GlobalResource.Cancel</a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="row form-group">
                    <div class="col-lg-2 col-lg-4 col-md-4 col-sm-4 text-right">
                        <label class="control-label">@LocalResource.Code</label>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        @Html.TextBoxFor(m => Model.Code, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-lg-2 col-lg-4 col-md-4 col-sm-4 text-right">
                        <label class="control-label">@GlobalResource.Name</label>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        @Html.TextBoxFor(m => Model.TemplateName, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-lg-2 col-lg-4 col-md-4 col-sm-4 text-right">
                        <label class="control-label">@GlobalResource.Description </label>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        @Html.TextAreaFor(m => Model.Description, new { @class = "form-control textarea-vertical-resize", @readonly = "readonly", @rows = "4", @cols = "50" })
                    </div>
                    <div class="col-lg-2 col-lg-4 col-md-4 col-sm-4 text-right">
                        <label class="control-label">@GlobalResource.Workflow</label>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        @Html.TextBoxFor(m => Model.WorkflowName, new { @class = "form-control",  @readonly = "readonly" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-lg-2 col-lg-4 col-md-4 col-sm-4 text-right">
                        <label class="control-label">@LocalResource.RelatedSteps</label>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        @Html.TextBoxFor(m => Model.Status, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-lg-2 col-lg-4 col-md-4 col-sm-4 text-right">
                        <label class="control-label">@LocalResource.DataSource</label>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                       @Html.TextBoxFor(m => Model.DataSource, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-lg-2 col-md-4 col-sm-4 col-xs-12 text-right">
                        <label class="control-label" style="padding-top:50px;">@LocalResource.UploadedFile</label>
                    </div>
                    <div class="col-lg-10 col-lg-10 col-md-10 col-sm-12 text-right">
                        <div class="table-responsive m-t">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th class="col-lg-5 col-sm-5 col-md-5 col-xs-12 no-padding-left">@GlobalResource.Name</th>
                                        <th class="col-lg-2 col-sm-2 col-md-2 col-xs-12"></th>
                                        <th class="col-lg-5 col-sm-5 col-md-5 col-xs-12 paddin-left-30">@GlobalResource.FileName</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="col-lg-5 col-sm-5 col-md-5 col-xs-12 no-padding-left text-left">
                                            <input type="text" style="width:92% !important"class="form-control" value="@Model.FileModel.FileName" disabled />
                                        </td>
                                        <td class="col-lg-2 col-sm-2 col-md-2 col-xs-12"></td>
                                        <td class="col-lg-5 col-sm-5 col-md-5 col-xs-12 paddin-left-30 text-left">
                                            <a href="@Url.Action("DownloadFile","File",new {id=Model.FileID, area="" })"><label class="no-borders table-description-field form-control irs-slider">@(Model.FileModel.FileName + "" + Model.FileModel.FileExtension)</label></a> 
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .table-description-field {
            max-width: 380px !important;
        }

        @@media (min-width: 768px) {
            .form-inline .form-control {
                width: 100% !important;
            }
        }
    </style>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}